<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <% if is_admin? %>
      	<th>Id</th>
      <% end %>
      <th>Address house</th>
      <th>City</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
	<% if is_admin? %>
		<td><%= address.id %></td>
	<% end %>
        <td><%= address.address_house %></td>
        <td><%= address.city %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', address %></td>
	<% if is_admin? %>
        	<td><%= link_to 'Edit', edit_address_path(address) %></td>
        	<td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	<% end %>
	</tr>
    <% end %>
  </tbody>
</table>

<br>

<% if is_admin? %>
	<%= link_to 'New Address', new_address_path %>
<% end %>
